{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "pytest - all tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"],
      "console": "integratedTerminal"
    },
    {
      "name": "pytest - current file",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "${file}"],
      "console": "integratedTerminal"
    }
  ]
}
